<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubViewer" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/grey_dark</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="TextField.LoginScreen" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxStrokeErrorColor">@color/boxStrokeErrorColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubViewer</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="GitHubViewer.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/backgroundColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="LoginScreen.SignIn.TextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RepositoryInfo.Counter.TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxWidth">56dp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RepositoryInfo.LabelCounter.TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>